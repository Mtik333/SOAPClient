ZmieniÄ‡ timestamp i boolean bo to MySQL

create table RSI_AUDITORIUM
(
	ID INTEGER not null,
	NAME VARCHAR(30) not null,
	SEATS_NUMBER INTEGER not null,
	PRIMARY KEY (ID)
)
;

create table RSI_CLIENT
(
	ID INTEGER not null,
	USERNAME VARCHAR(30) not null,
	PASSWORD VARCHAR(30) not null,
	PRIMARY KEY (ID)
)
;

create table RSI_MOVIE
(
	ID INTEGER not null,
	TITLE VARCHAR(100) not null,
	DIRECTOR VARCHAR(100) not null,
	ACTORS VARCHAR(1000),
	DESCRIPTION VARCHAR(1000),
	DURATION INTEGER,
	PRIMARY KEY (ID)
)
;

create table RSI_SEAT
(
	ID INTEGER not null,
	SEAT_ROW INTEGER not null,
	SEAT_NUMBER INTEGER not null,
	AUDITORIUM_ID INTEGER not null,
	PRIMARY KEY (ID),
	FOREIGN KEY (AUDITORIUM_ID) REFERENCES RSI_AUDITORIUM(ID)
)
;

create table RSI_SCREENING
(
	ID INTEGER not null,
	MOVIE_ID INTEGER not null,
	AUDITORIUM_ID INTEGER not null,
	SCREENING_START TIMESTAMP,
	PRIMARY KEY (ID),
	FOREIGN KEY (AUDITORIUM_ID) REFERENCES RSI_AUDITORIUM(ID),
	FOREIGN KEY (MOVIE_ID) REFERENCES RSI_MOVIE(ID)
)
;

create table RSI_RESERVATION
(
	ID INTEGER not null,
	SCREENING_ID INTEGER not null,
	CLIENT_RESERVER_ID INTEGER not null,
	RESERVATION_CONTACT VARCHAR(1024),
	RESERVED TINYINT(1),
	ACTIVE TINYINT(1),
	PRIMARY KEY (ID),
	FOREIGN KEY (SCREENING_ID) REFERENCES RSI_SCREENING(ID),
	FOREIGN KEY (CLIENT_RESERVER_ID) REFERENCES RSI_CLIENT(ID)
)
;


create table RSI_SEAT_RESERVED
(
	ID INTEGER not null,
	SEAT_ID INTEGER not null,
	RESERVATION_ID INTEGER not null,
	SCREENING_ID INTEGER not null,
	PRIMARY KEY (ID),
	FOREIGN KEY (SEAT_ID) REFERENCES RSI_SEAT(ID),
	FOREIGN KEY (RESERVATION_ID) REFERENCES RSI_RESERVATION(ID),
	FOREIGN KEY (SCREENING_ID) REFERENCES RSI_SCREENING(ID)
)
;

